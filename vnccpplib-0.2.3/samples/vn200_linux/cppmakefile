main: main.o vn200.o vncp_services.o IRLServer.o
	g++ -pthread -g -O3 -o testing main.o vn200.o vncp_services.o IRLServer.o -lrt

main.o: main.cpp
	g++ -c -g -Wall -I../../include main.cpp

vn200.o: ../../src/vn200.c
	gcc -c -g -Wall -I../../include ../../src/vn200.c

vncp_services.o: ../../src/arch/linux/vncp_services.c
	gcc -c -g -Wall -I../../include ../../src/arch/linux/vncp_services.c

IRLServer.o: IRLServer.cpp
	g++ -c -g -Wall IRLServer.cpp

clean:
	rm -rf *o testing
